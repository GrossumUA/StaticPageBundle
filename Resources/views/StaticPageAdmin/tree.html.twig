{% extends 'SonataAdminBundle:CRUD:base_list.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/grossumstaticpage/css/admin.css') }}">
{% endblock stylesheets %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>

    <script src="{{ asset('bundles/grossumstaticpage/js/jquery.nestable.js') }}"></script>

    <script src="{{ asset('bundles/grossumstaticpage/js/admin.js') }}"></script>
{% endblock javascripts %}

{% block meta_tags %}
    {{ parent() }}
    <meta content='{{ grossum_static_page_tree_depth }}' name="grossum_static_page_tree_depth">
{% endblock meta_tags %}

{% import _self as tree %}
{% macro navigate_child(collection, admin, depth) %}
    <ol class="dd-list">
        {% for element in collection %}
            <li class="dd-item dd3-item" data-id="{{ element.id }}" >
                <div class="dd-handle dd3-handle"></div>
                <div class="dd3-content"{% if depth < 2 %} data-treeview-toggled{% endif %}>
                    <a class="sonata-tree__item__edit" href="{{ admin.generateUrl('edit', {'id': element.id}) }}">[{{ element.id }}] - {{ element.title }}</a>
                    {% if element.enabled %}<span class="label label-success pull-right"><i class="fa fa-check"></i> {{ admin.trans('active', {}, admin.translationDomain) }}</span>{% endif %}
                    {% if not element.enabled %}<span class="label label-danger pull-right"><i class="fa fa-times"> {{ admin.trans('disabled', {}, admin.translationDomain) }}</i></span>{% endif %}
                </div>

                {% if element.__children|length %}
                    {{ _self.navigate_child(element.__children, admin, depth + 1) }}
                {% endif %}
            </li>
        {% endfor %}
    </ol>
{% endmacro %}

{% block tab_menu %}
    {% include 'GrossumStaticPageBundle:StaticPageAdmin:list_tab_menu.html.twig' with {
        'mode':   'tree',
        'action': action,
        'admin':  admin,
    } only %}
{% endblock %}

{% block list_table %}
    <div class="col-xs-12 col-md-12">
        <div class="box box-primary">
            <div class="box-content dd">
                {{ tree.navigate_child(root_static_page.__children, admin, 0) }}
            </div>
        </div>
    </div>
{% endblock %}